<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
/* Pricing UI + Razorpay integration (Option B: frontend verifies immediately)
   The script below is the same as your original; it works for both views.
   It only attaches buy handlers to elements that exist (non-subscriber view).
*/
(function(){
  const slider = document.getElementById('freqSlider');
  const freqBtns = Array.from(document.querySelectorAll('.freq'));
  const plans = Array.from(document.querySelectorAll('.plan-card'));
  const counterUsers = document.getElementById('counterUsers');
  const compareToggle = document.getElementById('compareToggle');
  const compareRow = document.getElementById('compareRow');
  const promoToggle = document.getElementById('promoToggle');
  const promoDrawer = document.getElementById('promoDrawer');
  const promoInput = document.getElementById('promoInput');
  const applyPromo = document.getElementById('applyPromo');
  const promoResult = document.getElementById('promoResult');
  const quizBtn = document.getElementById('quizBtn');
  const quizModal = document.getElementById('quizModal');
  const quizForm = document.getElementById('quizForm');
  const billingFaq = document.getElementById('billingFaq');
  const billingModal = document.getElementById('billingModal');

  // initialize slider position
  function updateSlider(activeBtn){
    if(!activeBtn) return;
    const rect = activeBtn.getBoundingClientRect();
    const parentRect = activeBtn.parentElement.getBoundingClientRect();
    slider.style.width = rect.width + 'px';
    slider.style.left = (rect.left - parentRect.left) + 'px';
  }

  function setPeriod(period){
    freqBtns.forEach(b=>{ b.setAttribute('aria-pressed', b.dataset.period===period); });
    // update visible prices
    plans.forEach(p => {
      const priceEl = p.querySelector('.price');
      if(!priceEl) return;
      const text = priceEl.getAttribute('data-price-' + period);
      priceEl.textContent = text;
      const unit = p.querySelector('div.text-xs');
      if(unit) unit.textContent = (period==='weekly' ? '/ week' : period==='monthly' ? '/ month' : '/ year');
    });
  }

  if (freqBtns.length) {
    freqBtns.forEach(b => b.addEventListener('click', ()=>{ updateSlider(b); setPeriod(b.dataset.period); }));
    const initial = document.querySelector('.freq[data-period="monthly"]');
    updateSlider(initial); setPeriod('monthly');
  }

  // compare
  if (compareToggle && compareRow) compareToggle.addEventListener('click', ()=> compareRow.classList.toggle('hidden'));

  // promo drawer
  if (promoToggle && promoDrawer) {
    promoToggle.addEventListener('click', ()=> promoDrawer.classList.toggle('hidden'));
    applyPromo.addEventListener('click', ()=> {
      const code = promoInput.value.trim().toUpperCase();
      if(!code){ promoResult.textContent = 'Enter a code.'; return; }
      if(code === 'EARLY20'){ promoResult.textContent = '20% applied ‚Äî price updated at checkout.'; } else { promoResult.textContent = 'Invalid or expired promo code.'; }
    });
  }

  // counters (animate on scroll into view)
  let usersCounted = false;
  function animateCounters(){
    if(usersCounted) return;
    const el = counterUsers;
    if(!el) return;
    const rect = el.getBoundingClientRect();
    if(rect.top < window.innerHeight){ usersCounted = true; let v=0; const target = 12431; const step = Math.ceil(target/60); const iv = setInterval(()=>{ v = Math.min(target, v+step); el.textContent = v.toLocaleString(); if(v>=target) clearInterval(iv); }, 20); }
  }
  window.addEventListener('scroll', animateCounters); animateCounters();

  // quiz modal
  if (quizBtn) {
    quizBtn.addEventListener('click', ()=> quizModal.classList.remove('hidden'));
    document.getElementById('quizClose').addEventListener('click', ()=> quizModal.classList.add('hidden'));
    quizForm.addEventListener('submit', (e)=> {
      e.preventDefault();
      const a = document.getElementById('q1').value;
      const b = document.getElementById('q2').value;
      const c = document.getElementById('q3').value;
      let rec = 'Monthly';
      if(a==='Daily' && b==='Yes') rec = 'Monthly';
      if(a==='Daily' && b==='Yes' && c==='Yes') rec = 'Yearly';
      if(a==='Rarely') rec = 'Weekly';
      alert('Recommendation: ' + rec + ' ‚Äî highlighting the matching plan.');
      plans.forEach(p=> p.classList.toggle('ring-2 ring-sky-200', p.dataset.plan.toLowerCase()===rec.toLowerCase()));
      quizModal.classList.add('hidden');
    });
  }

  // promo: trial behavior (placeholder)
  document.querySelectorAll('[data-action="trial"]').forEach(b => b.addEventListener('click', ()=> alert('Opening trial sample generator...')));

  // Accessibility: keyboard plan focus triggers
  plans.forEach(p=> p.addEventListener('keydown', e=>{ if(e.key==='Enter' || e.key===' ') p.querySelector('[data-action="buy"]')?.click(); }));

  // Billing faq modal
  if (billingFaq) billingFaq.addEventListener('click', (e)=>{ e.preventDefault(); billingModal.classList.remove('hidden'); });
  const closeBilling = document.getElementById('closeBilling');
  if (closeBilling) closeBilling.addEventListener('click', ()=> billingModal.classList.add('hidden'));

  // PAYMENT: Razorpay integration - only attach handlers if buy buttons exist
  async function createOrder(payload){
    const res = await fetch('/payments/create-order', {
      method: 'POST',
      credentials: 'same-origin',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify(payload)
    });
    return res.json();
  }

  async function verifyPayment(payload){
    const res = await fetch('/payments/verify', {
      method: 'POST',
      credentials: 'same-origin',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify(payload)
    });
    return res.json();
  }

  function openRazorpay(order, key, planName){
    return new Promise((resolve, reject) => {
      try {
        const options = {
          key: key,
          amount: order.amount,
          currency: order.currency || 'INR',
          name: 'Your App Name',
          description: planName || 'Subscription',
          order_id: order.id,
          prefill: {
            name: '<%= user ? (user.fullname || user.email) : "" %>',
            email: '<%= user ? user.email : "" %>'
          },
          handler: function(response){
            resolve(response);
          },
          modal: {
            ondismiss: function(){ reject(new Error('checkout_dismissed')); }
          }
        };
        const rzp = new Razorpay(options);
        rzp.open();
      } catch (err) {
        reject(err);
      }
    });
  }

  function readPlanFromButton(btn){
    const card = btn.closest('.plan-card');
    if(!card) return null;
    const planId = card.getAttribute('data-plan-id') || card.getAttribute('id') || 'plan';
    const active = document.querySelector('.freq[aria-pressed="true"]');
    const period = active ? active.dataset.period : 'monthly';
    const amountAttr = card.getAttribute('data-price-' + period) || card.dataset['price' + period] || card.querySelector('.price')?.getAttribute('data-price-' + period);
    let amount = 0;
    if(amountAttr) amount = parseFloat(String(amountAttr).replace(/[^\d.]/g,'')) || 0;
    else {
      const priceEl = card.querySelector('.price');
      if(priceEl) amount = parseFloat(priceEl.textContent.replace(/[^\d.]/g,'')) || 0;
    }
    const planName = card.querySelector('h3')?.textContent?.trim() || planId;
    return { planId, amount, planName, period };
  }

  async function onBuyClick(e){
    e.preventDefault();
    const btn = e.currentTarget;
    const plan = readPlanFromButton(btn);
    if(!plan){ alert('Could not determine plan.'); return; }
    if(!(plan.amount > 0)){ alert('Invalid plan amount'); return; }

    btn.disabled = true;
    const originalText = btn.textContent;
    btn.textContent = 'Processing...';

    try {
      // 1) create order on server
      const createResp = await createOrder({ planId: plan.planId, amount: plan.amount, planName: plan.planName, period: plan.period });
      if(!createResp || !createResp.ok || !createResp.order){ alert('Could not create order. Try again.'); btn.disabled=false; btn.textContent=originalText; return; }
      const order = createResp.order;
      const key = createResp.key;

      // 2) open razorpay checkout
      let rzpResp;
      try {
        rzpResp = await openRazorpay(order, key, plan.planName);
      } catch (err) {
        btn.disabled = false;
        btn.textContent = originalText;
        return;
      }

      // 3) verify the payment server-side
      const verifyResp = await verifyPayment({
        razorpay_payment_id: rzpResp.razorpay_payment_id,
        razorpay_order_id: rzpResp.razorpay_order_id,
        razorpay_signature: rzpResp.razorpay_signature,
        planId: plan.planId,
        planName: plan.planName,
        period: plan.period
      });

      if(verifyResp && verifyResp.ok){
        // reload to reflect subscription state
        window.location.reload();
      } else {
        alert('Payment verification failed. If money was charged, webhook will update your account shortly.');
        window.location.reload();
      }
    } catch (err) {
      alert('Payment failed. Try again.');
      btn.disabled = false;
      btn.textContent = originalText;
    }
  }

