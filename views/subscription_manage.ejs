<%- include('partials/head') %>
<%- include('partials/nav', { user: user }) %>

<main class="min-h-screen bg-gray-50 pt-28">
  <section class="max-w-4xl mx-auto px-6 py-12">
    <div class="bg-white rounded-2xl shadow-sm p-6">
      <div class="flex items-center justify-between gap-4">
        <div>
          <h1 class="text-2xl font-bold">Manage subscription</h1>
          <p class="text-sm text-gray-500 mt-1">View plan details, last payment and renew as needed.</p>
        </div>
        <% if (user && user.isSubscriber) { %>
          <div class="inline-flex items-center gap-3">
            <span class="inline-flex items-center px-3 py-1 rounded-full bg-emerald-100 text-emerald-800 text-sm border border-emerald-200">Active Pro</span>
          </div>
        <% } else { %>
          <a href="/pricing" class="px-3 py-2 btn-accent rounded text-sm">Choose a plan</a>
        <% } %>
      </div>

      <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-4 border rounded-lg">
          <h3 class="text-sm text-gray-600">Current plan</h3>
          <% if (user && user.isSubscriber) { %>
            <div class="mt-2">
              <div class="text-lg font-semibold"><%= user.plan || 'Pro' %></div>
              <div class="text-xs text-gray-500 mt-1">
                Activated: <strong><%= user.planActivatedAt ? new Date(user.planActivatedAt).toLocaleString() : '—' %></strong>
              </div>
              <div class="text-xs text-gray-500 mt-1">
                Period: <strong><%= user.planPeriod || 'one-time' %></strong>
              </div>
            </div>
            <div class="mt-4">
              <div class="text-sm text-gray-600">Last payment</div>
              <div class="mt-2 text-sm">
                <div>Order: <strong><%= user.lastPayment?.orderId || '—' %></strong></div>
                <div>Payment: <strong><%= user.lastPayment?.paymentId || '—' %></strong></div>
                <div>Amount: <strong><%= user.lastPayment?.amount ? ('₹' + user.lastPayment.amount) : '—' %></strong></div>
                <div>Date: <strong><%= user.lastPayment?.paidAt ? new Date(user.lastPayment.paidAt).toLocaleString() : '—' %></strong></div>
              </div>
            </div>
            <div class="mt-6 flex gap-3">
              <a href="/pricing" class="px-4 py-2 btn-primary rounded text-sm">Renew / Upgrade</a>
              <form action="/auth/support" method="GET">
                <button type="submit" class="px-4 py-2 border rounded text-sm">Contact support</button>
              </form>
            </div>
          <% } else { %>
            <div class="mt-2 text-sm text-gray-600">You are currently on the Free plan. Upgrade to Pro to remove limits and unlock features.</div>
            <div class="mt-4"><a href="/pricing" class="px-4 py-2 btn-accent rounded">Browse plans</a></div>
          <% } %>
        </div>

        <div class="p-4 border rounded-lg">
          <h3 class="text-sm text-gray-600">Account & Billing</h3>
          <div class="mt-3 text-sm text-gray-700">
            <ul class="list-disc list-inside space-y-2">
              <li>Receipts are emailed to your account after each purchase.</li>
              <li>Payment method: One-time payments (no auto-renew in this plan).</li>
              <li>Need a refund? Contact support within 7 days.</li>
            </ul>
          </div>

          <div class="mt-6">
            <h4 class="text-sm text-gray-600">Security</h4>
            <p class="text-xs text-gray-500 mt-2">All payments are processed securely via Razorpay. Your payment details are not stored on our servers.</p>
          </div>

          <div class="mt-6">
            <h4 class="text-sm text-gray-600">Actions</h4>
            <div class="mt-3 flex gap-3">
              <a href="/history" class="px-3 py-2 border rounded text-sm">View history</a>
              <a href="/billing/receipts" class="px-3 py-2 border rounded text-sm">Download receipts</a>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6 text-xs text-gray-500">
        Last updated: <%= new Date().toLocaleString() %>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
<%- include('partials/scripts') %>
