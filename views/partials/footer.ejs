        <select id="lang" class="p-2 rounded border text-sm bg-transparent dark:border-gray-700 dark:text-gray-200">
          <option value="en">English</option>
          <option value="hi">Hindi</option>
          <option value="es">Spanish</option>
        </select>

        <button id="theme-toggle" aria-label="Toggle theme" title="Toggle light / dark"
          class="ml-auto p-2 rounded-md border dark:border-gray-700 flex items-center justify-center">
          <svg id="theme-icon" class="w-4 h-4 transition-transform duration-300" viewBox="0 0 24 24" fill="currentColor">
